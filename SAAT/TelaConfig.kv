<TelaConfig>
    on_kv_post:
        self.postkv(app)

    MDFloatLayout:
        Texto:
            id: label1
            pos_hint: {"center_y": .945,"x": .045}
            text: "Mudar tema"
            bold: True

        MDCheckbox:
            size_hint: None,None
            height: dp(32)
            width: dp(32)
            on_press:
                root.alterar_texto_tema()
                app.alterar_modo()

            pos_hint: {"x": .045,"center_y": .87}

        Texto:
            id: tema
            pos_hint: {"center_y": .8696,"x": .12}
            text: "Tema atual: Claro"

        MDIcon:
            halign: "center"
            icon: "theme-light-dark"
            pos_hint: {"center_x": .3678 ,"center_y": .945}

        Texto:
            id: cortema
            pos_hint: {"center_y": .77, "x":.045}
            text: "Mudar cor principal do tema"
            bold: True

        MDIcon:
            halign: "center"
            icon: "palette"
            pos_hint: {"center_x": .65, "center_y": .77}

        MDRaisedButton:
            text: "Alterar cor"
            pos_hint: {"center_x": .5,"center_y": .7}
            on_release:
                app.alterar_tema()

        Texto:
            pos_hint: {"center_y": .62, "x":.045}
            text: "Fonte"
            bold: True

        MDIcon:
            halign: "center"
            icon: "format-size"
            pos_hint: {"center_x": .236,"center_y": .62}

        Texto:
            pos_hint: {"center_y": .53, "x":.053}
            text: "Alterar a fonte principal:"

        MDRaisedButton:
            text: "Mudar Fonte"
            pos_hint: {"center_x": .5,"y": .4227}
            on_release:
                app.alterar_fonte()

        MDFloatingActionButton:
            icon: "information-outline"
            pos_hint: {"center_y": .15, "center_x": .5}
            on_release:
                app.show_alert_dialog()